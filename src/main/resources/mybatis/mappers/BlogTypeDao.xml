<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.stupidwolf.dao.BlogTypeDao">
    <select id="findAllTypes" resultType="type">
        SELECT
            t.t_id id,
            t.`name` `name`
        FROM
            `type` t
        ORDER BY
            t.t_id ASC;
    </select>
</mapper>